<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lightning.cyborg">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 needed for older devices -
 used to check app background / foreground status
    -->
    <uses-permission android:name="android.permission.GET_TASKS" />

    <!-- START Added for GCM -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="lightning.cyborg.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="lightning.cyborg.permission.C2D_MESSAGE" />

    <!-- END Added for GCM -->
    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChatRoomActivity"
            android:label="@string/title_activity_chat_room_discussion"
            android:parentActivityName=".activity.UserHomepage"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.UserHomepage" />
        </activity>
        <activity
            android:name=".activity.UserHomepage"
            android:label="Test"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.RegistrationActivity"
            android:label="Registeration"
            android:theme="@style/AppTheme"></activity>

        <!-- START Added for GCM -->

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="lightning.cyborg" />
            </intent-filter>
        </receiver>

        <service
            android:name=".gcm.MyGcmPushReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name=".gcm.GcmIntentService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- END Added for GCM -->
        <activity
            android:name=".activity.interestsRegistration"
            android:label="@string/title_activity_interests_registration"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
