<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/layout2"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="128dp"
            android:background="#01579b"
            android:paddingBottom="20dp"
            android:paddingLeft="104dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Credentials"
                android:textColor="#FFF"
                android:textSize="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>


    </RelativeLayout>



    <com.gc.materialdesign.views.ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/layout2"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- FLAT BUTTON -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/relativeChangeNameText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Name"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#1E88E5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeEditFirstname"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01579b"

                android:id="@+id/etchangeName"
                android:hint="First Name..."
                android:textSize="12dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/relativeLastName"
            android:layout_below="@+id/relativeEditFirstname"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Last Name" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeEditLastname"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01579b"

                android:id="@+id/etLastname"
                android:hint="Last Name.."
                android:textSize="12dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Password" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#1E88E5" />
        </RelativeLayout>



        <!-- RECTANGLE BUTTON -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp" >

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:textColor="#01579b"

                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:hint="Enter Current Password"
               />


            <EditText
                android:id="@+id/etNewPassword"
                android:layout_below="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01579b"

                android:textSize="12dp"
                android:layout_centerInParent="true"
                android:hint="Enter New Password" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeEtEducation"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Education Status" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeEducation"
            android:layout_height="wrap_content" >

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:id="@+id/spinnerEducation"
                android:hint="Last Name.."
                android:textSize="12dp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeLocation"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Location" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeEditLocation"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#01579b"

                android:id="@+id/etLocation"
                android:hint="Change Location"
                android:textSize="12dp"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/relativetvBio"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:layout_centerVertical="true"
                android:text="Change Bio Status" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relativeBio"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etBio"
                android:editable="true"
                android:enabled="true"
                android:minLines="6"
                android:maxLines="6"
                android:isScrollContainer="true"
                android:hint="Type your new Bio here"
                android:background="#fafafa"
                android:textIsSelectable="true"
                android:focusable="true"
                android:gravity="top"
                android:padding="24dp"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                />

        </RelativeLayout>





        <!-- SMALL FLOAT BUTTON -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/maleRadioButton"
                    android:textColor="#01579b"

                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Male"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"
                    android:textSize="12dp"
                    android:id="@+id/femaleRadioButton"
                    android:text="Female"
                    />



            </RadioGroup>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_above="@+id/radioGroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#01579b"

                    android:layout_centerVertical="true"
                    android:text="Change Gender" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#1E88E5" />
            </RelativeLayout>


        </RelativeLayout>

        <!-- FLOAT BUTTON -->


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="72dp" >


        </RelativeLayout>

        <!-- FLOAT BUTTON -->

    </LinearLayout>
    </com.gc.materialdesign.views.ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/btnDone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
