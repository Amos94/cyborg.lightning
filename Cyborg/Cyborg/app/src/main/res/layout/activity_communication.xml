<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#01579b"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:id="@id/layoutxoxo"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="backToSetting"
                android:background="@drawable/ic_action_back"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Communication"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layoutxoxo"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_weight="0.06">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#01579b"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="Calling Setting" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#1E88E5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="0.04">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#01579b"
                android:text="Enable Calling"
                android:textSize="12dp"
                android:id="@+id/tvCalling"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/callingRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                materialdesign:check="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvCalling"
                android:layout_toEndOf="@+id/tvCalling" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_weight="0.07">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#01579b"

                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16dp"

                android:text="Disable Location" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#1E88E5" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="61dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Location"
                android:textColor="#01579b"
                android:textSize="12dp"
                android:id="@+id/tvDisableLocation"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="38dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/disableLocationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                materialdesign:check="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvDisableLocation"
                android:layout_toEndOf="@+id/tvDisableLocation" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>